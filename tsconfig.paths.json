      "@/*": ["./src/*", "./*"],
      "@/components/*": ["./components/*"],
      "@/lib/*": ["./lib/*"],
      "@/app/*": ["./app/*"],
      "@/db/*": ["./db/*"],
      "@/hooks/*": ["./hooks/*"],
      "@/types/*": ["./types/*"],
      "@/middleware/*": ["./middleware/*"],
      "@/middleware/old/*": ["./middleware/old/*"],
      "@/schemas/*": ["./schemas/*"]
